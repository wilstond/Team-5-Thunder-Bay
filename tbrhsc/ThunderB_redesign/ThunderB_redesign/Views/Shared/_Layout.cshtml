    <script type="text/javascript">
//     div height equalizer function

        function equalize() {
            var mainContent = $(".main_content");
            var sidebar = $(".sidebar_right");

            if ($(window).width() > 687) {
                if (mainContent.height() > sidebar.height()) {
                    console.log(mainContent.height());
                    sidebar.height(mainContent.height());
                }
                else {
                    console.log(mainContent.height());
                    mainContent.height(sidebar.height());
                }
            }
            else {
                mainContent.css('height','auto');
                sidebar.height('height', 'auto');
            }
        }

    
//--mobile menu function created with the help of Patricio Salazar Cespedes
        function mobile_menu() {
           var menu = $(".main_nav ul");

           if ($(window).width() <= 687) {

               $(".main_nav ul").css('display', 'none');
                $("#pull").css('display', 'block');

                // toggle menu. Unbind the click during the resize
                $("#pull").unbind("click").click(function () {
                    // animation for the menu
                    $(menu).animate({
                        height: "toggle"
                    }, 300);

                })
            } else {

                // display nav var if it was hidden when resizing to a bigger width
                $(menu).css('display', 'block');
                $("#pull").css('display', 'none');

                // disables the click effect
                $("#pull").unbind("click")

            }
        }

        $(document).ready(function () {
            // calling the function on load
            mobile_menu();

            equalize();

            $(window).resize(function () {
                // calling the function on resize
                mobile_menu();
                equalize();
            })


        })// end of document. ready

    </script>
