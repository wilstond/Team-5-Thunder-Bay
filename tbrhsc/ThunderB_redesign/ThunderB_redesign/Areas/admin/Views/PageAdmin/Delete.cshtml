@model ThunderB_redesign.Models.page

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <div class="page_preview">

        <hr />



        <h1>@Model.page_title</h1>
        <p>
            <span class="date">@Model.page_created.DayOfWeek, @Model.page_created.Date.ToLongDateString()</span>
        </p>
        <p>&nbsp;</p>
        <article>
            @Html.Raw(Model.page_content)
        </article>
        <p>&nbsp;</p>
        <p>&nbsp;</p>
        <p>&nbsp;</p>

        <hr />
        <h4>Additional Information</h4>
        <table class="page_editor">
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.menu_id)
                </td>

                <td>
                    @Html.DisplayFor(model => model.menu_id) -
                    @{
                        foreach (var menu_item in ViewBag.breadCrumbs)
                        {
                            if (menu_item.Key == Model.menu_id)
                            {
                                @Html.Raw(menu_item.Value);
                            }
                        }
                    }
                </td>
            </tr>
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.page_visibility)
                </td>

                <td>
                    @{
                        if (Model.page_visibility.ToString() == "Y")
                        {
                            @:Published
                    }
                        else
                        {
                            @:Draft
                    }
                    }
                </td>
            </tr>
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.page_slug)
                </td>

                <td>
                    @Html.DisplayFor(model => model.page_slug)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.meta_title)
                </td>

                <td>
                    @Html.DisplayFor(model => model.meta_title)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.meta_desc)
                </td>

                <td>
                    @Html.DisplayFor(model => model.meta_desc)
                </td>
            </tr>
        </table>
    </div>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
