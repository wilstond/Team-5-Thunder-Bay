<div class="middle clearfix">
    <div class="sidebar_right clearfix">
        <div class="donate clearfix">
            <h2>Help Make a Difference Donate to TBRHSC</h2>
        </div>

        <section class="news_feed clearfix">
            <header>Other pages</header>
            <div class="news_title">

                <h2>List of pages</h2>
                <ul>

                @{foreach (var item in ViewBag.ListOfPages)

                   { 

                        <li>
                            <a href="@Url.Action("Detail", "Page", new {item.page_slug })">@item.page_title</a>

                        </li>
                    }
                }
                    </ul>
            </div>
           

        </section>

        <section class="emergency_info">
            <h2>Emergency</h2>
            <div class="emergency_content">
                <ul>
                    <li>Who to call</li>
                    <li>Directions</li>
                    <li>Maps</li>
                </ul>
            </div>
            <div id="erm_holder">

            </div>
        </section>

    </div>

    <div class="main_content clearfix">
        <section class="top_section clearfix top">
            <header class="section-header">
                <h1>@Model.page_title</h1>
            </header>
            <span class="date">@Model.page_created.DayOfWeek, @Model.page_created.Date.ToLongDateString() - by @ViewData["author"]</span>
            <article>
                @Html.Raw(Model.page_content)


                @*<dt>
                        @Html.DisplayNameFor(model => model.menu_id)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.menu_id)
                    </dd>*@
            </article>
        </section>

    </div>
</div>


