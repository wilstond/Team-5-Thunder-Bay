@model IEnumerable<ThunderB_redesign.Models.newsTable>

@{
    ViewBag.Title = "Index";
}


@*The News Page for TBRHSC, It lists the most recent news story first*@

<h1>TBRHSC News</h1>

@*The link to write a new News Post, directs to the insert view*@
<p>@Html.ActionLink("Write a News Story", "Insert", "Linq")</p>

@*Listing all currect posted news by their headlines*@
<ul>
    @foreach (var x in Model)
    {
        <li>@Html.ActionLink(x.headline, "Story", new { id = x.Id })</li>
    }
</ul>