@model ThunderB_redesign.Models.subscriber

<div id="subscribefrm">
    @using (Ajax.BeginForm("ProcessSubscription", "Newsletter", new AjaxOptions
    {
        Confirm = "Are you sure?",
        HttpMethod = "Post",
        InsertionMode = InsertionMode.Replace,
        LoadingElementId = "Loading",
        UpdateTargetId = "subscribefrm"
    }))
    {
        <div class="form-horizontal">
            <h4>Subscribe to our Newsletter</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <div class="col-md-10">
                    @Html.LabelFor(model => model.sub_name, htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.EditorFor(model => model.sub_name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.sub_name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    @Html.LabelFor(model => model.sub_email, htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.EditorFor(model => model.sub_email, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.sub_email, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Subscribe" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
</div>
<div id="loading" style="display: none">
    <p>Processing request...</p>
</div>

@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
}