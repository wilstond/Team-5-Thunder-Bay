    <script type="text/javascript">

//     div height equalizer function - Irina Le Coche

        function equalize() {
            
            if ($(window).width() > 687) {
                $(".main_content").css('height', 'auto');
                $(".sidebar_right").css('height', 'auto');
                if ($(".main_content").height() > $(".sidebar_right").height()) {
                    //console.log(mainContent.height());
                    $(".sidebar_right").height($(".main_content").height());
                }
                else {
                    console.log($(".main_content").height());
                    $(".main_content").height($(".sidebar_right").height());
                }
            }
            else {
                $(".main_content").css('height', 'auto');
                $(".sidebar_right").css('height', 'auto');
            }
        }

    
//--mobile menu function created with the help of Patricio Salazar Cespedes - Irina Le Coche
        function mobile_menu() {
           var menu = $(".main_nav ul");

           if ($(window).width() <= 687) {

               $(".main_nav ul").css('display', 'none');
               $("#pull").css('display', 'block');
               $("#title h1").html('TBRHSC');

                // toggle menu. Unbind the click during the resize
                $("#pull").unbind("click").click(function () {
                    // animation for the menu
                    $(menu).animate({
                        height: "toggle"
                    }, 300);

                })
            } else {

                // display nav var if it was hidden when resizing to a bigger width
                $(menu).css('display', 'block');
                $("#pull").css('display', 'none');
                $("#title h1").html('Thunder Bay Regional Health Sciences Centre');


                // disables the click effect
                $("#pull").unbind("click")

            }
        }

        $(document).ready(function () {
            // calling the function on load
            mobile_menu();

            equalize();

            $(window).resize(function () {
                // calling the function on resize
                mobile_menu();
                equalize();
            })


        })// end of document. ready

    </script>

