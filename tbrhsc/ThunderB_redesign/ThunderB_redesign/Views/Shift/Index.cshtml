@model ThunderB_redesign.Models.volshift
@{
    ViewBag.Title = "Volunteer Shift";
}

<h2>Apply for Volunteer Schedule</h2>
@using (Html.BeginForm())
{
    @Html.ValidationSummary()
    <br />

    @Html.LabelFor(model => model.name)
    @Html.TextBoxFor(model => model.name)
    @Html.ValidationMessageFor(model => model.name, "*")
    <br />
    <br />
    @Html.LabelFor(model => model.email)
    @Html.TextBoxFor(model => model.email)
    @Html.ValidationMessageFor(model => model.email, "*")
    <br />
    <br />
    
    @Html.LabelFor(model => model.shiftday)
    <br />
    //@Html.DropDownListFor(model=>model.shiftday,)
    <select  id="shiftday" name="shiftday">
        <option value="monday">Monday</option>
        <option value="tuesday">Tuesday</option>
        <option value="wednesday">Wednesday</option>
        <option value="thursday">Thursday</option>
        <option value="friday">Friday</option>
        <option value="saturday">Saturday</option>
        <option value="sunday">Saturday</option>
    </select>

    <br />
    <br />
    <input type="submit" value="Submit" />
    <br />
     
}
