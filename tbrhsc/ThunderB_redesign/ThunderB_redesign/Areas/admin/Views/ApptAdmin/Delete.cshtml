@model ThunderB_redesign.Models.appointment

@*---------ths view displays appointment dateils and a warning before page is deleted----------*@

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
</head>
<body>
    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Delete appointment</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.dr_id)
            </dt>
            @*----------Doctor id-----------------*@
            <dd>
                @Html.DisplayFor(model => model.dr_id)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.date_req)
            </dt>
            @*------------Date of the request-----------*@
            <dd>
                @Html.DisplayFor(model => model.date_req)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.date_book)
            </dt>

            @*------------Date of the booking. Empty if not booked yet-----------*@

            <dd>
                @Html.DisplayFor(model => model.date_book)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.time_book)
            </dt>

            @*------------Time of the booking. Empty if not booked yet. Dispays time portion of the booking DateTime value-----------*@


            <dd>
                @Html.DisplayFor(model => model.time_book)
            </dd>

            @*----------Patient name-------------------------------------------*@

            <dt>
                @Html.DisplayNameFor(model => model.pat_name)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.pat_name)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.pat_phone)
            </dt>

            @*---------------Patient phone number--------------------------------*@

            <dd>
                @Html.DisplayFor(model => model.pat_phone)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.pat_email)
            </dt>

            @*--------------------Patient email------------------------------------*@

            <dd>
                @Html.DisplayFor(model => model.pat_email)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.app_status)
            </dt>

            @*---------------Appointment status-----------------------------------*@

            <dd>
                @Html.DisplayFor(model => model.app_status)
            </dd>

        </dl>

        @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
        }
    </div>
</body>
</html>
