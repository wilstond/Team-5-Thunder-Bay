@model ThunderB_redesign.Models.newsTable

@{
    ViewBag.Title = "Update News Story: " + @Model.headline;
}

@*The update view page, each form has the previous submission in the form to be edited.*@

<h1>Update: @Model.headline</h1>
<br />
@using (Html.BeginForm())
{
    @*@Html.HiddenFor(x => x.Id)*@
    
    @Html.LabelFor(x => x.headline)
    <br />
    @Html.TextBoxFor(x => x.headline, new { style = "width: 600px;"})
    @Html.ValidationMessageFor(x => x.headline)
    <br />
    <br />
    @Html.LabelFor(x => x.date)
    <br />
    @Html.TextBoxFor(x => x.date)
    @Html.ValidationMessageFor(x => x.date)
    <br />
    <br />
    @Html.LabelFor(x => x.stories)
    <br />
    @Html.TextAreaFor(x => x.stories, new { style = "width: 600px; height: 300px;" })
    @Html.ValidationMessageFor(x => x.stories)
    <br />
    <br />
    @Html.LabelFor(x => x.author)
    <br />
    @Html.TextBoxFor(x => x.author)
    @Html.ValidationMessageFor(x => x.author)
    <br />
    <br />
    <input type="submit" value="Update" id="Update" />
}
<br />
<p>@Html.ActionLink("Back", "Index", new { id = Model.Id })</p>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}