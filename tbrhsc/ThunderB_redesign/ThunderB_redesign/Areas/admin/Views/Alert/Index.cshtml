@model IEnumerable<ThunderB_redesign.Models.AlertTable>

@{
    ViewBag.Title = "Index";
    List<SelectListItem> alerts = new List<SelectListItem>();
    alerts.Add(new SelectListItem() { Text = "None", Value = "0", Selected = true });
    foreach (var x in Model)
    {
        alerts.Add(new SelectListItem() { Text = x.alert, Value = x.Id.ToString()});
    }
}

<div id="feedback_header">
    <h2>Post Alert</h2>
</div>
<br />

@*  Hitting Post goes to a FormMethod called post which sends to a page saying success *@
@using (Html.BeginForm("AlertPost","Alert",FormMethod.Post))
{
    @* The value of the drop down list is the id of the alert table *@
    @Html.DropDownList("Alerts", new SelectList(alerts, "Value", "Text"));

    <input type="submit" value="Post" />
}
