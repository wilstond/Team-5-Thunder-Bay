@model IEnumerable<ThunderB_redesign.Models.Job>
@{
    ViewBag.Title = "Index";
}

<h2>Jobs</h2>

<table class="stripes">
    <thead>
    <tr>
        <th>@Html.DisplayNameFor(model => model.job_title)</th>
        <th>@Html.DisplayNameFor(model => model.jobCategory.category)</th>
        <th>Actions</th>
        <th>Applications</th>
    </tr>
    </thead>
    <tbody> 

    @foreach (var x in Model)
    {
        <tr>
            <td>@x.job_title</td>
            <td>@x.jobCategory.category</td>
            <td>@Html.ActionLink("Edit", "Edit", new { id = x.Id }) &nbsp;&nbsp; @Html.ActionLink("Delete", "Delete", new { id = x.Id })</td>
            <td>@Html.ActionLink("Applications", "Index", "JobAppAdmin", new {id = x.Id}, null)</td>
        </tr>
    }
    </tbody>
</table>


