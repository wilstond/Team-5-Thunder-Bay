@model ThunderB_redesign.Models.triage

@using (Html.BeginForm("Insert", "ER", FormMethod.Post))
{
    <table border="1" cellpadding="10">

        <tr>
            <td>Patient Name :</td>
            <td>Arrived :</td>
            <td>Discharged :</td>
            <td>Actions</td>
        </tr>
        <tr>
            <td>@Html.TextBoxFor(x => x.patient_name)</td>
            <td>@Html.TextBox("arrival", DateTime.Now.ToLocalTime())</td>
            <td>@Html.TextBox("discharge", DateTime.Now.AddMinutes(40).ToLocalTime())</td>

            <td>
                <input type="submit" value="Save"
                       formaction="~/admin/ER/Insert" />
                &nbsp;&nbsp;
                <input type="submit" value="Cancel"
                       formaction="~/admin/ER/Index" />
            </td>
        </tr>
    </table>
}

